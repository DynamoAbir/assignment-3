{
  "compilerOptions": {
    /* Projects */
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts", // Includes all TypeScript files in the src directory
    "src/types/**/*.d.ts" // Includes custom type definitions like express.d.ts
  ]
}
